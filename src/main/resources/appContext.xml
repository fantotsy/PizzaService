<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="order" class="ua.fantotsy.domain.Order" scope="prototype"/>

    <bean name="orderService" class="ua.fantotsy.services.order.SimpleOrderService" autowire="constructor">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

    <context:component-scan base-package="ua.fantotsy"/>
    <context:annotation-config/>

</beans>