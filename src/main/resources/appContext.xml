<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="ua.fantotsy.infrastructure.annotations.BenchmarkBeanPostProcessor"/>

    <bean name="pizzaService" class="ua.fantotsy.services.pizza.SimplePizzaService" scope="prototype">
        <lookup-method name="createNewPizza" bean="pizza"/>
    </bean>

    <bean name="customerService" class="ua.fantotsy.services.customer.SimpleCustomerService" scope="prototype">
        <lookup-method name="createNewCustomer" bean="customer"/>
        <lookup-method name="createNewAddress" bean="address"/>
        <lookup-method name="createNewAccumulativeCard" bean="accumulativeCard"/>
    </bean>

    <bean name="orderService" class="ua.fantotsy.services.order.SimpleOrderService" scope="prototype">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

    <bean name="order" class="ua.fantotsy.domain.Order" scope="prototype">
        <constructor-arg>
            <set>
                <ref bean="accumulativeCardDiscount"/>
                <ref bean="theMostExpensivePizzaDiscount"/>
            </set>
        </constructor-arg>
    </bean>

    <bean name="customer" class="ua.fantotsy.domain.Customer" scope="prototype"/>

    <bean name="pizza" class="ua.fantotsy.domain.Pizza" scope="prototype"/>

    <bean name="address" class="ua.fantotsy.domain.Address" scope="prototype"/>

    <bean name="accumulativeCard" class="ua.fantotsy.domain.AccumulativeCard" scope="prototype"/>

    <context:component-scan base-package="ua.fantotsy.services"/>
    <context:component-scan base-package="ua.fantotsy.domain"/>

</beans>