<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="T1" class="ua.fantotsy.services.Test1SomeService"/>
    <bean name="T2" class="ua.fantotsy.services.Test1SomeService"/>


    <!-- <bean/> definitions here -->
    <bean name="pizzaRepository" class="ua.fantotsy.repository.pizza.InMemoryPizzaRepository" init-method="init"/>
    <bean name="orderRepository" class="ua.fantotsy.repository.order.InMemoryOrderRepository"/>
    <bean name="pizzaService" class="ua.fantotsy.services.pizza.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
    <bean name="orderService" class="ua.fantotsy.services.order.SimpleOrderService">
        <constructor-arg ref="orderRepository"/>
        <constructor-arg ref="pizzaService"/>
    </bean>

</beans>