<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="pizza" class="ua.fantotsy.infrastructure.MyFactoryBean"/>

    <bean class="ua.fantotsy.infrastructure.BenchmarkBeanPostProcessor"/>

    <bean name="orderService" class="ua.fantotsy.services.order.SimpleOrderService">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

    <!--<bean name="accumulativeCardDiscount" class="ua.fantotsy.domain.discounts.AccumulativeCardDiscount"/>-->

    <!--<bean name="theMostExpensivePizzaDiscount" class="ua.fantotsy.domain.discounts.TheMostExpensivePizzaDiscount"/>-->

    <bean name="order" class="ua.fantotsy.domain.Order" scope="prototype" lazy-init="true">
        <constructor-arg>
            <set>
                <ref bean="accumulativeCardDiscount"/>
                <ref bean="theMostExpensivePizzaDiscount"/>
            </set>
        </constructor-arg>
    </bean>

    <context:component-scan base-package="ua.fantotsy.services"/>
    <context:component-scan base-package="ua.fantotsy.domain"/>

</beans>