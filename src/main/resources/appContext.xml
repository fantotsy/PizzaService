<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="order" class="ua.fantotsy.domain.Order" scope="prototype"/>

    <bean name="pizzaService" class="ua.fantotsy.services.pizza.SimplePizzaService" autowire="constructor"/>

    <bean name="orderService" class="ua.fantotsy.services.order.SimpleOrderService" autowire="constructor">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

    <bean name="customerService" class="ua.fantotsy.services.customer.SimpleCustomerService" autowire="constructor"/>

</beans>